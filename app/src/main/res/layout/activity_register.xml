<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0af"
    tools:context=".ui.sign_in_up.RegisterActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loginHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/registerPassword2EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="@+id/passwordInputTitle"
                app:layout_constraintTop_toBottomOf="@+id/repeatPasswordInputTitle" />

            <TextView
                android:id="@+id/repeatPasswordInputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="تکرار رمز عبور"
                app:layout_constraintStart_toStartOf="@+id/registerPasswordEditText"
                app:layout_constraintTop_toBottomOf="@+id/registerPasswordEditText" />

            <TextView
                android:id="@+id/registerHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:text="ثبت نام"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/usernameInputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="نام کاربری"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/registerNameEditText" />

            <EditText
                android:id="@+id/registerUsernameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="@+id/usernameInputTitle"
                app:layout_constraintTop_toBottomOf="@+id/usernameInputTitle" />

            <TextView
                android:id="@+id/emailInputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ایمیل"
                app:layout_constraintStart_toStartOf="@+id/registerUsernameEditText"
                app:layout_constraintTop_toBottomOf="@+id/registerUsernameEditText" />

            <EditText
                android:id="@+id/registerEmailEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="@+id/emailInputTitle"
                app:layout_constraintTop_toBottomOf="@+id/emailInputTitle" />

            <TextView
                android:id="@+id/passwordInputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="رمز عبور"
                app:layout_constraintStart_toStartOf="@+id/registerEmailEditText"
                app:layout_constraintTop_toBottomOf="@+id/registerEmailEditText" />

            <EditText
                android:id="@+id/registerPasswordEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="@+id/passwordInputTitle"
                app:layout_constraintTop_toBottomOf="@+id/passwordInputTitle" />

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="ثبت نام"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/registerPassword2EditText"
                app:layout_constraintTop_toBottomOf="@+id/registerPassword2EditText" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="نام و نام خانوادگی"
                app:layout_constraintStart_toStartOf="@+id/registerHeader"
                app:layout_constraintTop_toBottomOf="@+id/registerHeader" />

            <EditText
                android:id="@+id/registerNameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>